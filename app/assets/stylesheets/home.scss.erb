$bright-pink-link: #FF10CF;
$lightest-shade-of-grey: #f2f2f2;
$medium-shade-of-grey: #ececec;
$darkest-shade-of-grey: #e0e0e0;

/*=========================CUSTOM FONTS==========*/
@font-face {
  font-family: 'CanterBold';
  font-weight: normal;
  font-style: normal;
  src: font-url('CanterBold.eot');
  src: font-url('CanterBold.eot?#iefix') format('embedded-opentype'),
       font-url('CanterBold.woff') format('woff'),
       font-url('canter_bold-webfont.woff2') format('woff2'),
       font-url('CanterBold.ttf') format('truetype');
}

@font-face {
  font-family: 'CanterLight';
  font-weight: normal;
  font-style: normal;
  src: font-url('CanterLight.eot');
  src: font-url('CanterLight.eot?#iefix') format('embedded-opentype'),
       font-url('CanterLight.woff') format('woff'),
       font-url('CanterLight.woff2') format('woff2'),
       font-url('CanterLight.ttf') format('truetype');
}

@font-face {
  font-family: 'Voltaire';
  font-weight: normal;
  font-style: normal;
  src: font-url('voltaire-regular-webfont.eot');
  src: font-url('voltaire-regular-webfont.eot?#iefix') format('embedded-opentype'),
       font-url('voltaire-regular-webfont.woff') format('woff'),
       font-url('voltaire-regular-webfont.woff2') format('woff2'),
       font-url('voltaire-regular-webfont.ttf') format('truetype');
}

html {
  position: relative;
  min-height: 100%;
}

body{
	background-color: $lightest-shade-of-grey !important;
    font-family: 'Josefin Sans', sans-serif !important;
    font-weight: 400;
}
.inner-container{
	font-family: 'Helvetica', sans-serif !important;
	font-size: 11pt !important; 
	a:visited, a:link{
		color: $bright-pink-link !important; 
	}

    @for $index from 1 through 6 {
  		h#{$index}{
    		font-weight: 600 !important; 
    		font-family: 'Josefin Sans', sans-serif !important;
    		color: #5e5e5e !important;
    		text-shadow: -2px 2px 0px rgba(150, 150, 150, 0.55) !important;
  		}
	}
}

input[type="text"]:not(#search){
  border-radius: 5px; 
  border: 1px solid #aaaaaa;
  padding: 6px;
  width: 50%;
}

.dropdown-menu{
	background-color:  $medium-shade-of-grey !important; 
	li{
		margin: 5px;
	}
}
.navbar-brand{
	font-family: 'CanterBold' !important;
	font-size: 28px !important;
	color: black !important; 
	text-shadow: -2px 2px 0px rgba(150, 150, 150, 0.55) !important;
  background-image: url("/images/original/sitewide/candy_icon.png");
  background-size: 54px;
  background-repeat: no-repeat;
  padding-left: 60px !important; 
  
}
.navbar{
	background-color: $medium-shade-of-grey !important;
	border-right: 0 !important;
  border-left: 0 !important; 
  border-top: 0 !important; 
  border-bottom: 1px solid #dddddd !important; 
	padding: 8px;
	font-weight: 600 !important; 
	font-size: 13px;
	font-weight: 700 !important; 

	a:hover{
		color: $bright-pink-link !important; 
		background-color: $darkest-shade-of-grey !important;
		border-radius: 10px;
	}
}

#auth-buttons {
	a{
		color: black !important; 
		/* top | right | bottom | left */
		padding: 10px 12px 10px 30px; 
		border-radius: 10px;
		width: 100px;  
		-webkit-box-shadow: 5px 5px 0px 0px rgba(0,0,0,0.15);
		-moz-box-shadow: 5px 5px 0px 0px rgba(0,0,0,0.15);
		box-shadow: 5px 5px 0px 0px rgba(0,0,0,0.15);
		margin-top: 10px; 
		font-size: 12pt !important;
		font-weight: 600;

		&:nth-of-type(1){
			float: left;
			background-color: #00D1D2; /* A candy blue */

			&:hover{
				background-color: #00eff0; /* Lighter shade of above blue */
				text-decoration: none; 
			}
		}
		&:nth-of-type(2){
			float: right; 
			background-color: #F95EDC; /* A candy pink */

			&:hover{
				background-color: #fb84e4; /* Lighter shade of above pink */
				text-decoration: none; 
			}
		}
	}
}
/*=========================CENTERING STYLES===================*/
.center{
	margin: 0;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-right: -50%;
    transform: translate(-50%, -50%)
}
img.center-horizontally{
   display: block;
   margin-left: auto;
   margin-right: auto;
}
ul.center-horizontally, p.center-horizontally, div.center-horizontally{
	margin-left: auto;
    margin-right: auto;
    width: 70%;
}

/*=========================BLINKING CURSOR ANIMATION==========*/
.cursor:after {
    content:"_";
    opacity: 0;
    font-weight: 700; 
    animation: cursor 1s infinite;
}

@keyframes cursor {
    0% {
        opacity: 0;
    }
    40% {
        opacity: 0;
    }
    50% {
        opacity: 1;
    }
    90% {
        opacity: 1;
    }
    100% {
        opacity: 0;
    }
}

/* Need to set the width to make sure the typing animation doesn't make
the auth buttons stagger */
#splash{
	width: 375px; 
  font-family: 'Josefin Sans', sans-serif !important; 
  font-size: 18px !important; 
}

.main{
  padding-bottom: 130px; 
}

.footer {
  /* Forces the footer to stay at the bottom of the page */ 
  position: absolute;
  bottom: 0;
  width: 100%;
  /* Set the fixed height of the footer here */
  height: 60px;
  line-height: 60px; /* Vertically center the text there */
  background-color: $medium-shade-of-grey !important;
  border-right: 0 !important;
  border-left: 0 !important; 
  border-bottom: 0 !important; 
  border-top: 1px solid #dddddd !important; 

  text-align: center; 

  a{
    &:hover, &:visited, &:link{
      color: $bright-pink-link; 
    }
  }

  .glyphicon{
    padding-left: 5px;
    padding-right: 5px;
  }
}

.search-form{
  /* Without this, the search form doesn't line up with the rest 
    of the elements in the navbar */
  padding-top: 8px;
  padding-right: 8px; 
}
/* Expanding Search form code. From here: 
   http://bootsnipp.com/snippets/featured/expanding-search-button-in-css */
.search-form .form-group {
  float: right !important;
  transition: all 0.35s, border-radius 0s;
  width: 32px;
  height: 32px;
  background-color: #f8f8f8;
  box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset;
  border-radius: 25px;
  border: 1px solid #ccc;
}
.search-form .form-group input.form-control {
  padding-right: 20px;
  border: 0 none;
  background: transparent;
  box-shadow: none;
  display:block;
}
.search-form .form-group input.form-control::-webkit-input-placeholder {
  display: none;
}
.search-form .form-group input.form-control:-moz-placeholder {
  /* Firefox 18- */
  display: none;
}
.search-form .form-group input.form-control::-moz-placeholder {
  /* Firefox 19+ */
  display: none;
}
.search-form .form-group input.form-control:-ms-input-placeholder {
  display: none;
}
.search-form .form-group:hover,
.search-form .form-group.hover {
  width: 100%;
  border-radius: 4px 25px 25px 4px;
}
.search-form .form-group span.form-control-feedback {
  position: absolute;
  top: -1px;
  right: -2px;
  z-index: 2;
  display: block;
  width: 34px;
  height: 34px;
  line-height: 34px;
  text-align: center;
  color: #a0a0a0;
  left: initial;
  font-size: 14px;
}