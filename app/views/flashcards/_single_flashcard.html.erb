<div class="flashcard-container">
	<div class="flashcard">
		<h3>Original Word</h3>
		<p><%= f.orig_word %></p>

		<h3>Translation</h3>
		<p><%= f.translation %></p>

		<h3>Image</h3>
		<%= image_tag f.image.url, :width => "300px", :height => "250px" %>
		<ul>
			<li class="<%= unless show_view_link then 'hide' else '' end %>"><%= link_to 'View', flashcard_path(f)%></li>
			<li><%= link_to 'Edit', edit_flashcard_path(f) %></li>
			<li><%= link_to 'Delete', flashcard_path(f),
            	  method: :delete,
              	data: { confirm: 'Are you sure?' } %></li>
		</ul>
	</div>
	
	<h3>Tags</h3>
	<ul>
		<li>
		   <% langs_link_label = l.from_lang.capitalize + " to " + l.to_lang.capitalize %>
		   <%= link_to langs_link_label, stacks_by_langs_path(l.code.sub('-','_')) %>
		</li>
		<li>
			<% batch_link_label = 'batch ' + f.batch_num.to_s %>
			<%= link_to batch_link_label, stacks_by_batch_path(f.batch_num) %> 
		</li>

		<% f.user_defined_tags.each do |t| %>
			<li><%= link_to t.name, ''%></li>
		<% end %>
	</ul>

</div>