<h1><%= @stack_title %></h1>
<%= render partial: 'home/flash' %> 
	<div class="flashcards-list">
	   <% size =  @flashcards.count %>
	   <% num_per_row = 3 %> 
	   <% num_rows = (size/num_per_row.to_f).ceil%>
	   <ul>
	        <li> Found <b><%= size %></b> flashcards </li>
	   		<li> Displaying <b><%= num_per_row %></b> per row</li>
	   		<li> Displaying <b><%= num_rows %></b> rows</li>
	   </ul>

	   	<% current_row = 0 %> 
	   	<% @flashcards.each do |fl| %> 
	   	    <% if current_row % num_per_row == 0 then %> 
	   	    	<div class="flashcards-row"> <!-- START STACK ROW --> 
	   	    <% end %>
	   	    
	   	    	<%= render partial: "flashcards/single_flashcard", locals: { f: fl, l: @langs[fl.id], show_view_link: true }%> 

	   	    <% if (current_row % num_per_row == (num_per_row - 1)) || fl.id == @flashcards.last.id then %> 
	   	    	</div> <!-- END STACK ROW -->
	   	    <% end %>
	   	    <% current_row += 1 %> 
	   	<% end %>

	</div>