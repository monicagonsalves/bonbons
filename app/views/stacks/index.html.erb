<h1>Find Stacks</h1>
<!-- TODO: Instead of tab-like interface, start off by listing all the stacks ordered 
alpahbetially by name and give the user the option of filtering stacks by type or name. -->
<div class="stacks-list">
	<div class="container">
		<form class="filter-and-generate-stacks" role="search">
		<%= form_tag("/stacks/find", method: "post") do %>
		<div class="row">
			<div class="col-xs-4">
			</div>
			<div class="col-xs-2">
				<label class="filter-label">Filter: </label>
			</div>
			<div class="col-xs-2">
				<label><input type="checkbox" name="by_tags" />Tags</label>
			</div>
			<div class='col-xs-2'>
				<label><input type="checkbox" name="by_langs" />Languages</label>
			</div>
			<div class="col-xs-2">
				<label><input type="checkbox" name="by_tags" />Creation Batch</label>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12">
		    	<div class="input-group">
					<input type="text" class="form-control" placeholder="Search" name="srch-term" id="srch-term">
					<div class="input-group-btn">
						<button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
					</div>
				</div>
				</form>
				<% end %>
			</div>
		</div>

		<table>
			<tr>
				<th>Name</th>
				<th>Number of Flashcards</th>
				<th>Delete</th>
			</tr>

		    <%= render partial: "stack_list", locals: { stacks: @stacks, paths: @paths }%> 

		</table>
	</div>
</div>
